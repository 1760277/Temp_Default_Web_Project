<%- include('User_Header',{title: 'History'}); -%>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
<div class="text-center">
  <h1 class="h4 text-gray-900 mb-4">History Transaction</h1>
</div>
<div class="card shadow mb-4">
    <div class="card-body" >
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="font-size:17px;">
          <thead>
            <tr>
              <th>Create At</th>
              <th>Content</th>
              <th>Money</th>
              <th>Transaction type</th>
              <th>Details</th>
            </tr>
          </thead>
          <tbody>
             <% pm.forEach(item => { %>
              <% del.forEach(iten => { %> 
                <% if (iten.paymentId==item.id) { %>
              <tr>
                <td><%= moment(item.createdAt).format( 'DD-MM-YYYY')  %></td>
                <td><%= iten.contentPayment %></td>
                <td><%= item.moneyDeposit %> </td> 
                <td>Type <%= ac === item.accountNumberSend ? 'Send' : 'Receive'%> </td>               
                <td>
                  <a class="btn btn-primary btn-user btn-block" data-toggle="modal" data-target="#myModal<%= item.id %>">Details</a>
                  <div class="modal" id="myModal<%= item.id %>">
                    <div class="modal-dialog">
                      <div class="modal-content">
                  
                        <!-- Modal Header -->
                        <div class="modal-header">
                          <h4 class="modal-title" style="color: darkblue;">Detail Payment</h4>
                          <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                  
                        <!-- Modal body -->
                        <div class="modal-body" style="font-size:1.1em; color: black; border-style: double;">
                          <p1>Code Payment :  <%= iten.codePayment %> </p1> <br><br>
                          <p1>AvailableBalance :  <%= iten.availableBalance %> </p1> <br><br>
                          <p1>Create At: <%= moment(item.createdAt).format( 'DD-MM-YYYY')%></p1> <br><br>
                          <p1>AccountNumberSend :  <%= item.accountNumberSend %> </p1> <br><br>
                          <p1>MoneyDeposit :  <%= item.moneyDeposit %> </p1> <br><br>
                          <p1>AccountNumberReceive :  <%= item.accountNumberReceive %> </p1> <br><br>
                          <p1>NameCustomReceive :  <%= item.nameCustomReceive %> </p1> <br><br>
                          <p1>BankReceive :  <%= item.bankReceive %> </p1> <br><br>
                          <p1>ContentPayment :  <%= iten.contentPayment %> </p1> <br><br>

                        </div>
                  
                        <!-- Modal footer -->
                        <div class="modal-footer">
                          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>
                  
                      </div>
                    </div>
                  </div>
                </td>
              </tr>
              <% } %> 
             <% }) %> 
             <% }) %>     
          </tbody>
        </table>
      </div>
    </div>
  </div>

<%- include('User_Footer'); -%>
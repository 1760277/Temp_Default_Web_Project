<%- include('User_Header',{title: 'Payment Account'}); -%>
<div class="p-5">
    <div class="text-center">
      <h1 class="h4 text-gray-900 mb-4" style="margin-top: 1em; margin-bottom: 1em; font-size: 3em;font-style: oblique;">Thông tin tài khoản thanh toán</h1>
    </div>
    <div class="row" style="border-style: double;margin-bottom: 5em;">
    <div class="column" style="float: left; width: 50%; font-size: x-large;margin-left: 8em; margin-bottom: 1em;" >
        <p>Số tài khoản</p>
        <h><%= account.accountNumber %> </h>
        <p>Loại tiền tệ</p>
        <h>VND</h>
        <p>Trạng thái tài khoản</p>
        <h><%= account.status == true ? 'Tài khoản đang hoạt động' : 'Tài khoản đang khóa' %> </h>
    </div>
    <div class="column" style="font-size: x-large;margin-left: 1em;">
        <p>Chi nhánh quản lý</p>
        <h><%= account.brandBank %> </h>
        <p>Số dư</p>
        <h><%= account.availableBalance %> </h>
    </div>
    </div>
</div>
<%- include('User_Footer'); -%>